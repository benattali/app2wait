<% icon_sizes = Rails.configuration.serviceworker.icon_sizes %>
{
  "name": "App2Wait",
  "short_name": "App2Wait",
  "start_url": "/",
  "icons": [
  <% icon_sizes.map { |s| "#{s}x#{s}" }.each.with_index do |dim, i| %>
    {
      "src": "<%= image_path "logo.png" %>",
      "sizes": "<%= dim %>",
      "type": "image/png"
    }<%= i == (icon_sizes.length - 1) ? '' : ',' %>
  <% end %>
  ],
  "theme_color": "#FF9701",
  "background_color": "#FF9701",
  "display": "browser",
  "orientation": "portrait",
  "display": "standalone"
}
