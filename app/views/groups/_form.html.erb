<div class="group-form d-none">
  <br>
  <%= simple_form_for @group do |f| %>

    <div class="container">
      <div class="form-inputs mt-0">
        <%= f.input :name, label: "Group name" ,placeholder: "Name of the group" %>
        <%= f.input :photo, class: "btn btn-primary" %>
        <%= f.input :photo_cache, as: :hidden%>
        <p class="mt-3">Select friend(s):</p>
        <%= select_tag("users", options_from_collection_for_select(User.all, 'id', 'username' ), multiple: true, include_hidden: false, class: "form-control" )%>
    <br>
    <div class="form-actions d-flex justify-content-center">
      <%= f.submit "Create group", class: "btn btn-outline-primary btn-block mt-3", style: "font-size: 24px; font-weight: bold;" %>
    </div>
  <% end %>
      </div>

    </div>

</div>

